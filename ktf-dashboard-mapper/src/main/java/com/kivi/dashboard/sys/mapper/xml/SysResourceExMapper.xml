        <result column="description" property="description" />
        <result column="icon" property="icon" />
        <result column="seq" property="seq" />
        <result column="resource_type" property="resourceType" />
        <result column="status" property="status" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_update" property="gmtUpdate" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="parent_name" property="parentName" />
    </resultMap>
    
    
    <select id="selectResourceList" parameterType="map" resultMap="ResouceVoResultMap">
        SELECT
	        t.id,
	        t.parent_id,
	        t.name,
	        t.icon,
	        t.resource_type,
	        t.seq,
	        t.url,
	        t.status,
	        t2.`name` AS parent_name
        FROM
        	ktf_sys_resource t
        LEFT JOIN
        	ktf_sys_resource t2 ON t.parent_id = t2.id
        <where>
            <if test="id!=null">
                t.id=#{id}
            </if>
            <if test="status!=null">
                AND t.status=#{status}
            </if>
            <if test="parentId!=null and parentId!=''">
                AND t.parent_id=#{parentId}
            </if>
            <if test="resourceType!=null and resourceType!=''">
                AND t.resource_type=#{resourceType}
            </if>
        </where>
        order by t.seq asc
    </select>
    
    <select id="selectMenuTreeList" parameterType="map" resultMap="ResouceVoResultMap">
        SELECT
	        t.id,
	        t.parent_id,
	        t.name,
	        t.resource_type
        FROM
        	ktf_sys_resource t
        <where>
            <if test="id!=null">
                t.id=#{id}
            </if>
            <if test="status!=null">
                AND t.status=#{status}
            </if>
            <if test="parentId!=null and parentId!=''">
                AND t.parent_id=#{parentId}
            </if>
            <if test="resourceType!=null and resourceType!=''">
                AND t.resource_type=#{resourceType}
            </if>
        </where>
        order by t.seq asc
    </select>
   
    
    <!-- 查询用户的所有菜单ID -->
    <select id="selectResourceIdListByUserId" resultType="long">
		SELECT DISTINCT
	    	rm.resource_id
        FROM
	    	ktf_sys_user_role ur
        LEFT JOIN ktf_sys_role_resource rm ON ur.role_id = rm.role_id
        WHERE
	    	 ur.user_id = #{userId}
	</select>
    
    
    <!-- 查询用户的所有菜单ID -->
    <select id="selectResourceListByUserId" resultMap="DtoResultMap">
	   SELECT
			r.id,
			r.parent_id,
			r.`name`,
			r.resource_type,
			r.url,
			r.icon
		FROM
			ktf_sys_resource r
		<where>
			<if test="params.userId!=null">
				r.id IN (
					SELECT
						rr.resource_id
					FROM
						ktf_sys_user_role ur
					LEFT JOIN ktf_sys_role_resource rr ON ur.role_id = rr.role_id
					WHERE
						ur.user_id = #{params.userId}
				)
			</if>
			<if test="params.resourceTypes!=null">
                AND r.resource_type IN 
                <foreach item="item" index="index" collection="params.resourceTypes" open="(" separator="," close=")">  
      				#{item}  
     			</foreach>  
            </if>
			<if test="params.status!=null">
				AND r.`status` = #{params.status}
			</if>
			<if test="params.hidden!=null">
				AND r.hidden = #{params.hidden}
			</if>
		</where>
		ORDER BY
			r.parent_id,
			r.seq
	</select>
	
